
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="dev.f.nomalluguespartner.ChooseActivity"
    android:background="#ffffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="120dp"
        android:layout_width="fill_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:paddingTop="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/linear_chose"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/buttonAbarrotes"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tienda" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/buttonFruta"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fruta" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/buttonHerr"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/herramienta" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/buttonVerdura"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/verdura" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/buttonCarne"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/carne" />

        </LinearLayout>

    </ScrollView>

    <view
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        class="mbanje.kurt.fabbutton.FabButton"
        android:id="@+id/indeterminate"
        android:layout_gravity="right"
        android:color="@color/accent"
        android:src="@drawable/ic_fab_complete"
        android:visibility="visible"
        android:indeterminate="true"
        android:max="100"
        app:fbb_autoStart="true"
        app:fbb_progressColor="#0099cc"
        app:fbb_progressWidthRatio="0.2"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/scrollView"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"
        />

</RelativeLayout>
