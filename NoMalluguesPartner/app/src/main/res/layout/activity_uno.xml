<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="dev.f.nomalluguespartner.Evaluation">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="150dp"
        android:paddingTop="50dp"
        android:layout_width="fill_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mandados Completados"
                android:id="@+id/total"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37"
                android:id="@+id/textView"
                android:layout_below="@+id/total"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="70dp"
                android:textStyle="bold"
                android:textColor="#3F51B5" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/ratingBar"
                android:numStars="5"
                android:rating="4.7"
                android:progressTint="#3F51B5"
                android:layout_above="@+id/quickContactBadge"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los marchantes dicen:"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#AFB42B"
                android:layout_marginBottom="20dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/horizontalScrollView"
                android:layout_gravity="center_horizontal">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp">

                        <QuickContactBadge
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:id="@+id/quickContactBadge"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/textView2"
                            android:layout_toStartOf="@+id/textView2"
                            android:background="@drawable/milf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luis Pérez comenta:"
                            android:id="@+id/textView3"
                            android:layout_alignTop="@+id/quickContactBadge"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:text="Todo muy  bien todo llego a tiempo"
                            android:id="@+id/textView4"
                            android:layout_below="@+id/textView3"
                            android:layout_alignLeft="@+id/textView3"
                            android:layout_alignStart="@+id/textView3" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp">

                        <QuickContactBadge
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:id="@+id/quickContactBadge2"
                            android:layout_below="@+id/textView4"
                            android:layout_alignLeft="@+id/quickContactBadge"
                            android:layout_alignStart="@+id/quickContactBadge"
                            android:background="@drawable/nope" />

                        <TextView
                            android:layout_width="122dp"
                            android:layout_height="wrap_content"
                            android:text="Monica Torres comenta:"
                            android:id="@+id/textView5"
                            android:layout_alignTop="@+id/quickContactBadge2"
                            android:layout_alignLeft="@+id/textView4"
                            android:layout_alignStart="@+id/textView4" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:text="Me ayudo bastante, no me defraudo "
                            android:id="@+id/textView7"
                            android:layout_alignTop="@+id/textView6"
                            android:layout_toRightOf="@+id/textView6"
                            android:layout_toEndOf="@+id/textView6" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <QuickContactBadge
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:id="@+id/quickContactBadge3"
                            android:layout_below="@+id/textView6"
                            android:layout_alignLeft="@+id/quickContactBadge2"
                            android:layout_alignStart="@+id/quickContactBadge2"
                            android:background="@drawable/teenager" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diego Rodríguez comenta:"
                            android:id="@+id/textView8"
                            android:layout_alignTop="@+id/quickContactBadge3"
                            android:layout_toRightOf="@+id/textView6"
                            android:layout_toEndOf="@+id/textView6" />

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:text="Me ayudo bastante, no me defraudo "
                            android:id="@+id/textView7"
                            android:layout_alignTop="@+id/textView6"
                            android:layout_toRightOf="@+id/textView6"
                            android:layout_toEndOf="@+id/textView6" />


                        <TextView
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:text="Tardo un poco pero me trajo todo bien"
                            android:id="@+id/textView9"
                            android:layout_below="@+id/textView8"
                            android:layout_alignLeft="@+id/textView8"
                            android:layout_alignStart="@+id/textView8" />

                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

</RelativeLayout>
